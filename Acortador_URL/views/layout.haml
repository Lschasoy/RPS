!!! 5
%html
  %head
    %title Acortador de URLs
    %link(rel="stylesheet" type="text/css" href="//netdna.bootstrapcdn.com/twitter-bootstrap/2.1.1/css/bootstrap-combined.min.css")
    %link(rel="stylesheet" type="text/css" href="/css/styles.css")
  %body
    %div.row
      %div.span10.offset1
        %h1
          %a(href="/")
            Acortador
            %small de URLs
      %div.span5.offset1
        %p
          Acortador de URLs.
        %p
          %a(href="/list") URLs acortadas
      %div#controls.span4.offset1   
        %div.row          
          %form(action="/" method="POST")
            %div.control-group
              %input.search-query(type="text" name="url" id="url" accesskey="s" placeholder="URL a acortar...")
              %input.btn.btn-inverse(type="submit" value="Shorten")   
            %div.control-group            
              %label.checkbox
                %input(type="checkbox" name="custom" id="custom") Nombre personalizado
              %input.span2(type="text" name="custom_name" id="custom_name" placeholder="Nombre personalizado...")                 
          %form(action="/search" method="POST")
            %input.search-query(type="text" name="search" id="search" placeholder="Buscar URLs")
            %input.btn.btn-inverse(type="submit" value="Search")  
      %div.span10.offset1
        =yield
